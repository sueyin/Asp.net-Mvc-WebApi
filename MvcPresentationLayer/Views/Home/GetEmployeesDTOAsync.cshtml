@model IEnumerable<WebApiLayer.Models.EmployeeDTO>

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="title">Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Contact Number</th>
        <th>Address</th>
    </tr>

    @foreach (var item in Model.Employees)
    {
        <tr>
            <td><input class="id_input" id="@("ID_"+@item.ID)" value=@item.ID /></td>
            <td><input id="@("Name_"+@item.ID)" value=@item.Name /></td>
            <td><input id="@("ContactNumber_"+@item.ID)" value=@item.ContactNumber /></td>
            <td><input id="@("Address_"+@item.ID)" value=@item.Address /></td>

            <td>
                <button class="edit_button" id="@item.ID">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
            </td>
            <td class="remove_button">@Html.ActionLink("Remove", "Remove", new { ID = item.ID })</td>
            <td>
                <button class="confirm_button" id="@("Confirm_"+item.ID)">Confirm</button>
            </td>
        </tr>
    }
</table>

